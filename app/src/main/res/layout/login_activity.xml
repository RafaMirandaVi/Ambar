<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414141"
    android:theme="@style/NoActionBar"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:background="#F2F2F2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/memberLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/LoginPersonText"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textPersonName"
            android:ems="15"
            android:background="#DBDDDD"
            android:layout_marginTop="35dp"
            android:shadowColor="#000"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/LoginPassText"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textPassword"
            android:ems="15"
            android:background="#DBDDDD"
            android:textColorHighlight="#000"
            android:textColor="#333333"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/male12"
        android:layout_marginTop="70dp"
        android:background="@anim/circle"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/LoginButtonLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#52A7F9"
        android:text="@string/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        />
</RelativeLayout>