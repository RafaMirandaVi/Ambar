<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#655321">
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnailCollectionObject"
        android:layout_width="180dp"
        android:layout_height="180dp"
        />
    <!-- Movie Title -->
    <TextView
        android:id="@+id/titleCollectionObjectObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/thumbnailCollectionObject"
        android:layout_toRightOf="@id/thumbnailCollectionObject"
        android:layout_toEndOf="@id/thumbnailCollectionObject"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/humCollectionObjectObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/titleCollectionObjectObject"
        android:layout_toRightOf="@id/thumbnailCollectionObject"
        android:layout_toEndOf="@id/thumbnailCollectionObject"
        android:textColor="#c3c3c3"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/tempCollectionObjectObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/humCollectionObjectObject"
        android:layout_toRightOf="@id/thumbnailCollectionObject"
        android:layout_toEndOf="@id/thumbnailCollectionObject"
        android:textColor="#c3c3c3"
        android:textSize="30sp"
        />
    <!-- Rating -->

</RelativeLayout>